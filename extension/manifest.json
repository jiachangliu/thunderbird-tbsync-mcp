{
  "manifest_version": 2,
  "name": "Thunderbird TbSync MCP",
  "version": "0.1.0",
  "description": "MCP server for safe calendar edits with forced TbSync sync (EAS)",
  "applications": {
    "gecko": {
      "id": "thunderbird-tbsync-mcp@luthriel.dev",
      "strict_min_version": "128.0"
    }
  },
  "background": {
    "type": "module",
    "scripts": ["background.js"]
  },
  "permissions": [
    "notifications"
  ],
  "experiment_apis": {
    "tbsyncMcpServer": {
      "schema": "mcp_server/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["tbsyncMcpServer"]],
        "script": "mcp_server/api.js"
      }
    }
  }
}
